<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="false"
                app:cardBackgroundColor="?attr/colorPrimary">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="70dp"
                       />

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:src="@drawable/com_facebook_profile_picture_blank_square"
                        android:id="@+id/imageViewPic"
                        android:layout_height="60dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:text="Welcome,"
                            android:paddingLeft="5dp"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:textColor="@color/cardview_light_background"
                            android:textStyle="normal|bold|italic"
                            android:textSize="15sp" />

                        <TextView
                            android:text="User Name"

                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:paddingLeft="5dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewHomeUserName"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@color/cardview_light_background"
                            android:textStyle="normal|bold"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >

                        <Button
                            android:text="Log Out"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:id="@+id/button31"
                            android:onClick="logout"

                            android:layout_gravity="right"
                            style="@style/com_facebook_button_share"
                            android:background="@color/com_facebook_button_send_background_color_pressed"
                            android:elevation="9dp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <include
                    android:id="@+id/noNet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/no_net" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:src="@drawable/button_qp"
                            android:id="@+id/imageView"
                            android:layout_gravity="center"

                            android:onClick="qp"
                            android:layout_width="150dp"
                            android:layout_height="170dp" />
                    </android.support.v7.widget.CardView>

                    <Space
                        android:layout_height="wrap_content"

                        android:layout_width="20dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        card_view:cardUseCompatPadding="true">

                        <ImageView
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:src="@drawable/button_syllabus"
                            android:id="@+id/imageView5"
                            android:onClick="syllabus"
                            android:layout_width="150dp"
                            android:layout_weight="1" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        card_view:cardUseCompatPadding="true"
                         >

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="150dp"
                            android:layout_height="170dp"
                            android:src="@drawable/button_notes"
                            android:id="@+id/imageView14"
                            android:layout_weight="1"
                            android:onClick="notes"/>
                    </android.support.v7.widget.CardView>

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        card_view:cardUseCompatPadding="true"
                         >

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="150dp"
                            android:layout_height="170dp"
                            android:src="@drawable/button_book"
                            android:id="@+id/imageView15"
                            android:layout_weight="1"
                            android:onClick="books"/>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        card_view:cardUseCompatPadding="true"
android:onClick="share"
                        >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <Space
                                android:layout_width="5dp"
                                android:layout_height="wrap_content"
                            />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/share"
                                android:id="@+id/imageView16"
                                android:layout_gravity="center"
                                android:scaleType="fitXY" />

                            <TextView
                                android:text="Share"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView14"
                                android:textStyle="normal|bold" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <Space
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                         />

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        card_view:cardUseCompatPadding="true"

                        android:onClick="about">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <Space
                                android:layout_width="5dp"
                                android:layout_height="wrap_content"
                                />
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/about"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                />

                            <TextView
                                android:text="About"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="normal|bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/my_banner_ad_unit_id_Home"
        >
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
